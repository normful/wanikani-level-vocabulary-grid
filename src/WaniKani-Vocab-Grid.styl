@namespace url(http://www.w3.org/1999/xhtml)
@-moz-document regexp("http(s?)://www.wanikani.com/(level.*|vocabulary.*|kanji.*)")
  section
    & > ul
      @media (min-width: 768px)
        display flex
        flex-flow row wrap
  ul
    &.multi-character-grid
      li
        &.character-item
          box-sizing border-box
          width 100%
          @media (min-width: 1200px)
            width (100% / 5)
          @media (min-width: 980px) and (max-width: 1199px)
            width (100% / 4)
          @media (min-width: 768px) and (max-width: 979px)
            width (100% / 3)
          span
            &.character
              @media (min-width: 768px)
                  font-size 40px
                  display block
                  width 100%
          ul
            @media (min-width: 768px)
              float left
              text-align left
              & > li
                &:nth-child(1)
                  font-size 30px
                &:nth-child(2)
                  font-size 15px
